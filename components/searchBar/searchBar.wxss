/* components/searchBar/searchBar.wxss */
.searchBar {
  width: 100vw;
  height: 100rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
}

.publicSearchBarBox {
  width: 700rpx;
  height: 75rpx;
  background-color: white;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
}

.searchIcon {
  margin-left: 150rpx;
  position: relative;
  top: -2rpx;
}

.searchIcon image {
  width: 24rpx;
  height: 24rpx;
}

.searchInp {
  margin-left: 17rpx;
  width: 300rpx;
}

.searchInp input {
  height: 23rpx;
  font-size: 24rpx;
  color: #aaaaaa;
}